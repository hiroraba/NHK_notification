{
  "manifest_version": 2,
  "name": "NHK Notification",
  "version": "0.0.1",
  "description": "NHK Notification.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["javascript/jquery-1.10.2.min.js",
      "javascript/jsonselect.js",
      "javascript/contents.js"]
  },
  "permissions": [
    "tabs",
    "http://*/"
  ],
  "browser_action": {
    "default_icon": "images/icon19.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
